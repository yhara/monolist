p#notice = notice

= render 'folders/breadcrumbs', folder: @item.folder

p
  strong Name:
  = @item.vname
  = render '_shared/tags', tags: @item.tags

- if @item.added_on
  p
    strong Added:
    = @item.added_on

- if @item.removed_on
  p
    strong Removed:
    = @item.removed_on

- if @item.photos.any?
  p
    strong Photos:
    - @item.photos.each do |photo|
      a href=(photo.body.url)
        img src=(photo.src_for_preview)

p
  strong Note:
  pre= @item.note

= link_to 'Add photo', new_photo_path(item_id: @item.id)
' |
= link_to 'Edit', edit_item_path(@item)
' |
= link_to 'Destroy', @item, data: {:confirm => 'Are you sure?'}, :method => :delete
' |
= link_to 'Back', folder_path(@item.folder)
